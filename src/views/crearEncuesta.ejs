  <div class="col-sm-10 col-md-10" >
  <div class="container-fluid row mx-1 mt-2 ">
    
  <form class="mt-3" style="font-size:30px;" action="/encuesta/save" method="post">
      <div class="form-group row">
        <label for="iconLapiz" class="fa fa-pencil col-sm-1 col-form-label"></label>
      <div class="col-sm-7 col-md-7">
        <input type="text" name="titulo" placeholder="Titulo" class="form-control" value="Titulo para la encuesta">
      </div>
        <div class="d-none d-lg-block col-sm-2 col-md-2">
          <div class="form-group" id="">
            <h5>Fecha de caducidad</h5>
            <input type="date" name="fecha" min="2022-06-25" class="form-control" value="">
        </div>
        </div>
      <div class="d-none d-lg-block col-sm-1 col-md-2">
        <h5>Poblacion dirigida</h5>
        <select style="width:100%" name="id_poblacion"class="form-select" aria-label="Default select example">
          <option value="1" selected>Estudiante</option>
          <option value="2">Docente</option>
          <option value="3">Egresado</option>
      </select>
      </div>
      </div>
    </form>

  <form class="mt-1" >
      <div class="form-group row">
        <label for="iconLapiz" class="fa fa-pencil col-sm-1 col-form-label" style="font-size:30px;"></label>
      <div class="col-sm-8 col-md-8">
        <input type="text" name="descripcion" placeholder="Descripción" class="form-control" value="Descripcion para la encuesta">
      </div>
      </div>
    </form>
<div class="container-fluid row mx-1 mt-2 " id="cuerpo">
  <div class="col-sm-12 col-md-12 mt-3" >
      <h1>Seleccione el tipo de pregunta.</h1>
    </div>

<div id="preg1"></div>
    
    <div class="row">
			<div  style="margin-top: 1.3%;" class=" col-md-3 form-group text-center">
			<select id="tipo" class="form-select"  aria-label="Default select example" placeholder="Opciones de respuestas">
					<option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
			</select>
          <br>  <br>
			</div>
		</div>
    
    <br>
        
      <br>   
    </div>
      
    </div>
    </div>
    </div>
    <a type="button" class="btn mt-5 rounded-5 " id="boton" href="#">Añadir opción</a>
    <button type="button" class="btn mt-5 rounded-5 " onclick="agregarpregunta()" id="boton" >Nueva pregunta</button><br>
    <button type="button" class="btn mt-3 rounded-5 " id="boton" onclick="recargarPag()">Subir encuesta</button>
    <input type="file" class="btn mt-3 rounded-5 " onclick="crear()" id="boton"/>
    </div>
  </div> 

  <script rel="stylesheet" type="text/javascript" src="../../js/encuesta.js"></script>
